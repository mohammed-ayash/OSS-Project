{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/loginstyle.css">
{% endblock %}{% block include %}
{% endblock %}
{% block body %}


    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        {% if error %}
                            <div class="alert alert-danger mt-3 position-absolute">Invalid username or password</div>
                        {% endif %}
                        <form id="login-form" action="{{ path('security_login') }}" method="post" >
                            <h3 class="text-center text-dark float-right">Login</h3>
                            <div class="form-group mt-5">
                                <label for="username" class="text-dark required">Username:</label><br>
                                <input value="{{ last_username }}" type="text" name="_username" required="required" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputpassword" class="text-dark required">Password:</label><br>
                                <input type="password" name="_password" id="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button id="Login" class="btn btn-lg btn-dark" type="submit">Sign in</button>
                                <a class="btn btn-lg btn-dark" id="logout" href="{{ path('register_index') }}"  title="Logout">Sign up</a>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}