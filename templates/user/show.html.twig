{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/js/fancybox/dist/jquery.fancybox.min.css">
{% endblock %}

{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Preview User</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Users</a></li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock %}

{% block body %}

    <div>
        <a href="{{ path('user_index') }}" class="btn float-right btn-dark btn-sm"><i class="fas fa-arrow-alt-circle-left pr-1"></i>Back to Users</a>
        <a href="{{ path('user_new') }}" class="btn btn-primary btn-sm"><i class="fas fa-plus-circle pr-1"></i>Add</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-edit pr-1"></i>Edit</a>
        {{ include('user/_delete_form.html.twig') }}

    </div>
    <br />

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th width="200">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Birthday</th>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <th>Type</th>
                {% if user.type %}
                    <td>Owner Market</td>
                {% else %}
                    <td>Owner Market</td>
                {% endif %}
                <tr>
                    <th>Country</th>
                    <td>{{ user.country }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>
                        {% if user.getpictureWebPath() %}
                            {% set imageUrl = asset(user.getpictureWebPath()) %}
                            <a class="fancybox" href="{{ imageUrl }}"><img src="{{ imageUrl }}" style="max-width:50px;" /></a>
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="/js/fancybox/dist/jquery.fancybox.min.js"></script>
    <script>
        $('.fancybox').fancybox({});
    </script>
{% endblock %}
